<% include ../partials/header %>
<div class="container">
    <div class="row">
        <div class="col-md-3">
            <p class="lead">Yelp Camp</p>
            <div class="list-group">
                <li class="list-group-item active">Info 1</li>
                <li class="list-group-item ">Info 2</li>
                <li class="list-group-item ">Info 3</li>
            </div>
        </div>
        <div class="col-md-9">
            <div class="thumbnail">
                <img class="img-responsive" src= "<%= camp.image %>" alt="campImage">
                <div class="caption">
                    <h4 class="pull-right">$9.00/night</h4>
                    <h4> <a href="#"><%= camp.name %></a> </h4>
                    <p> <%= camp.description %> </p>
                </div>
            </div>
            <div class="well">
                <div class="text-right">
                    <a class="btn btn-success" href="/campgrounds/<%= camp._id %>/comments/new">Add new comments</a>
                </div>
                <hr>
                <% camp.comments.forEach(function(commentData){ %>
                    <div class="row">
                        <div class="col-md-12">
                            <strong><%= commentData.author %></strong>
                            <span class="pull-right">10 days ago</span>
                            <p>
                                <%= commentData.text %>
                            </p>
                        </div>
                    </div>
                <% }) %>
                <% include ../partials/footer %>
            </div>
        </div>
    </div>
</div>